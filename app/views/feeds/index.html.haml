%h1 Infos / Aktuelles

= link_to 'Neue Info', new_feed_path, :class => "ui button green basic"


%table.table.ui
  %thead
    %tr
      %th Title
      %th Text
      %th Priorität
      %th
      %th
      %th

  %tbody
    - @feeds.each do |feed|
      %tr
        %td{class: [('text grey' if feed.deaktiviert)]}= feed.title
        %td{class: [('text grey' if feed.deaktiviert)]}= feed.text
        %td{class: [('text grey' if feed.deaktiviert)]}= feed.priority
        %td= link_to 'Zeigen', feed
        %td= link_to 'Bearbeiten', edit_feed_path(feed)
        %td= link_to 'Löschen', feed, method: :delete, data: { confirm: 'Sind Sie sicher?' }

%br
